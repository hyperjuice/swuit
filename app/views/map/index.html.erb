<div class="homefont">
	<h1>products by location</h1>
</div>

<%= javascript_include_tag 'theMap', 'data-turbolinks-track' => true %>

<div class="container">
	<div class="row">
		<div class="col-md-2">
			<div class="table-responsive">
				<table class="table table-hover">
					<tbody>
						<% @products.each do |product| %>
							<tr>
							  <td>
							  	<%= link_to product.kind, user_product_path(product.user, product), class: "btn btn-default" %>
							  </td>
							</tr>  
						<% end %>
					</tbody>	
				</table>
			</div>	
		</div>
		<div class="col-md-10">
			<div id='map'>
			</div>
		</div>	
	</div>
</div>