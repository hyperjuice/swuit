<div class="homefont">
	<h1>products</h1>
</div>
<div class="row">
	<div class ="context">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>These are all of the products belonging to <%= @user.first_name %>:</h3>
			</div>	
			<div class="panel-body">
				<% @user.products.each do |product|  %> 
					<%= link_to("show", [@user, product], class: "btn btn-success") if policy(product).show? %>
					<%= link_to("edit", edit_user_product_path(@user, product), class: "btn btn-success") if policy(product).edit? %>
					<%= link_to("delete", [@user, product], class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this?" }) if policy(product).destroy? %> 
					<%= product.kind %>
					<p>&nbsp;</p>
				<% end %>
			</div>
		</div>	
	</div>
</div>